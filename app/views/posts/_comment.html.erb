<%if @comment.present? %>
  <div class="border p-3">
    <div class="row">
      <div class="col-1">
        <p>
          <%= image_tag(comment.avatar.url, size: '70', class: "avatar") %>
        </p>
      </div>
      <div class="col-9">
        <h5 class="pt-2">
          <%= comment.author %>
        </h5>
        <h6>
          <%= comment.content %>
        </h6>
        <p>
          <%= comment.created_at.strftime("%Y.%m.%d") %>
          <%= comment.created_at.strftime("%H:%M:%S")%>
        </p>
      </div>
      <div class="col-2 text-right">
        <%= link_to 'Delete',comment_path(comment), method: :delete, class: 'btn btn-danger link' %>
      </div>
    </div>
  </div>
<%end %>

